<component name="product/design" project-type="eclipse-pde" disabled="false">

	<!-- dependency name="prereqs.extlib-des/dtp_1.8.2" type="dir" / -->
	<dependency name="prereq.des.infra/xve" type="dir" /> 
	<dependency name="prereq.des.infra/swtbot" type="dir" /> 
	<dependency name="product/runtime" type="dir" /> 



	<!--An output group is needed to get it into the fe.zip -->
	<output-group name="default">
		<output type="dir" 
			visibility="public"
			platform="all"
			location="${env.LWP_COMP_BUILD}/eclipse"
			preferredInstallLocation="."/>
	</output-group>

	<!-- This is required until all FEs are using PDE builder.  -->
	<output-group name="temp.PDE_Builder">
 		<output type="dir"
 			visibility="public"
 			platform="all"
 			location="**/component.xml"
 			preferredInstallLocation="."/>
		<output type="dir"
			visibility="public"
			platform="all"
			location="**/plugin.xml"
			preferredInstallLocation="."/>
		<output type="dir"
			visibility="public"
			platform="all"
			location="**/fragment.xml"
			preferredInstallLocation="."/>
		<output type="dir"
			visibility="public"
			platform="all"
			location="**/feature.xml"
			preferredInstallLocation="."/>
		<output type="dir"
			visibility="public"
			platform="all"
			location="**/META-INF"
			preferredInstallLocation="."/>
	</output-group>
</component>

